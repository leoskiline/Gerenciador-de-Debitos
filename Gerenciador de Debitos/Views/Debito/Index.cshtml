@{
    Layout = "_Layout";
}

<div class="app-main__inner">
    <div class="tab-content">
        <div class="tab-pane tabs-animation fade active show" id="tab-content-0" role="tabpanel">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <h5 class="card-title">Cadastro de Contas</h5>
                    <form class="">
                        <div class="form-row">
                            <div class="col-md-6">
                                <div class="position-relative form-group"><label for="descricao" class="">Descrição da conta</label><input name="descricao" id="descricao" type="text" class="form-control"></div>
                            </div>
                            <div class="col-md-3">
                                <div class="position-relative form-group"><label for="data" class="">Data de cobrança</label><input name="data" id="data" type="date" class="form-control"></div>
                            </div>
                            <div class="col-md-3">
                                <div class="position-relative form-group"><label for="valor" class="">Valor</label><input name="valor" id="valor" type="text" class="form-control"></div>
                            </div>

                            <script>
                                $(document).ready(function () {
                                    $("#valor").inputmask('decimal', {
                                        'alias': 'numeric',
                                        'groupSeparator': ',',
                                        'autoGroup': true,
                                        'digits': 2,
                                        'radixPoint': ".",
                                        'digitsOptional': false,
                                        'allowMinus': false,
                                        'prefix': 'R$ ',
                                        'placeholder': ''
                                    });
                            </script>

                        </div>
                        <button class="mt-2 btn btn-success float-right" onclick="_gerenciarContas.CadastrarConta()"><i class="fa fa-check-square text-white"></i> Cadastrar</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="tab-pane tabs-animation fade" id="tab-content-1" role="tabpanel">

        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="main-card mb-3 card">
                <div class="card-header">
                    Contas Cadastradas
                </div>
                <div class="card-body">
                    <div class="row">
                        <form class="w-100">
                            <div class="form-row p-3">
                                <div class="col-md-6">
                                    <div class="position-relative form-group">
                                        <label for="descricao">Descrição</label>
                                        <input name="descricao" id="descricao" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="position-relative form-group">
                                        <label for="data">Data</label>
                                        <input name="data" id="data" type="datetime-local" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="position-relative form-group">
                                        <label for="valor">Valor</label>
                                        <input name="valor" id="valor" type="number" min="0" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="position-relative form-group">
                                        <button class="btn btn-primary float-right"><i class="fas fa-sort-amount-down-alt"></i> Filtrar</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="row">
                        <div class="table-responsive">
                            <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>DESCRIÇÃO</th>
                                        <th class="text-center">DATA</th>
                                        <th class="text-center">VALOR</th>
                                        <th class="text-center">OPÇÕES</th>
                                    </tr>
                                </thead>
                                <tbody id="tabela">
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/lib/JqueryMoney/jquery.maskMoney.js"></script>
<script src="~/lib/JqueryMoney/jquery.maskMoney.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>